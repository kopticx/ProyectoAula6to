@using PapeleriaIPN.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PapeleriaIPN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/customMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customBg.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>

    @if (ViewData["Title"] != "Login" && ViewData["Title"] != "Registro")
    {
        <header>
            <a href="#" class="logo">Papeleria IPN</a>
            <nav class="nav_menu">
                <ul>
                    <li><a asp-controller="Main" asp-action="Principal">Inicio</a></li>
                    <li><a asp-controller="Main" asp-action="Productos">Productos</a></li>
                    <li><a asp-controller="Main" asp-action="Contacto">Contactanos</a></li>
                    @*@if(InicioSesion.usuarioGlobal.UserType == 1)
                    {*@
                        <li><a asp-controller="Administracion" asp-action="Principal">Administracion</a></li>
                    @*}*@
                    <li><a asp-controller="Main" asp-action="Carrito"><i class="bi bi-cart2"></i></a></li>
                </ul>
            </nav>
        </header>

        <section class="zona1"></section>

        <div class="bg_color"></div>
        <div class="wave w1"></div>
        <div class="wave w2"></div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
